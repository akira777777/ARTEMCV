{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "env": {
    "VITE_API_KEY": "@vite_api_key",
    "VITE_TELEGRAM_CHAT_ID": "@vite_telegram_chat_id"
  },
  "functions": {
    "api/send-telegram.ts": {
      "memory": 1024,
      "maxDuration": 30,
      "runtime": "nodejs20.x"
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
